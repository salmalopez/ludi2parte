<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.ludi.tt_ludi.Ahorcado"
    tools:showIn="@layout/activity_ahorcado"
    android:background="#FFD54F"
    android:orientation="vertical"
    android:weightSum="1">


    <!--Preguntas-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:layout_weight="0.39">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pregunta"
            android:textSize="60dp"
            android:id="@+id/pregunta"
            android:textColor="#3E2723"
            android:textStyle="bold" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="302dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <!--Imagen ahorcado-->
        <ImageView
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="8"
            android:id="@+id/imagen"
            android:background="@drawable/comenzar_ahorcado"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:layout_margin="10px"
            android:gravity="center" />

        <!--Opciones-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="New Button"
                android:id="@+id/button1"
                android:background="@drawable/btncereales"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff" />

            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="New Button"
                android:id="@+id/button2"
                android:background="@drawable/btncereales"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="New Button"
                android:id="@+id/button3"
                android:background="@drawable/btncereales"
                android:textColor="#ffffff"
                android:textSize="30dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="New Button"
                android:id="@+id/button4"
                android:background="@drawable/btncereales"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="New Button"
                android:id="@+id/button5"
                android:background="@drawable/btncereales"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="New Button"
                android:id="@+id/button6"
                android:background="@drawable/btncereales"
                android:textColor="#ffffff"
                android:textSize="30dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="New Button"
                android:id="@+id/button7"
                android:background="@drawable/btncereales"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="New Button"
                android:id="@+id/button8"
                android:background="@drawable/btncereales"
                android:textColor="#ffffff"
                android:textSize="30dp" />

        </LinearLayout>

    </LinearLayout>


    <!--Botones-->
    <LinearLayout
        android:layout_width="1201dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_regresar"
            android:visibility="visible"
            android:background="@drawable/regreso"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.00"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="800dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnCuestionario"
            android:background="@drawable/cuestionario"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.00" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnReiniciar"
            android:background="@drawable/reinicio"
            android:visibility="visible"
            android:layout_marginLeft="50dp" />
    </LinearLayout>


</LinearLayout>
