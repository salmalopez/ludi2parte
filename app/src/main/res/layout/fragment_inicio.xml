<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fondoinicio"
    tools:context="com.ludi.tt_ludi.InicioFragment">

    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="ACTIVIDADES"
        android:id="@+id/btnActividades"
        android:background="@drawable/btngrupo4"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:textSize="60dp"
        android:layout_marginRight="30dp"
        android:textColor="#fdfdfd"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:text="NOTICIAS"
        android:id="@+id/btnNoticias"
        android:background="@drawable/btngrupo4"
        android:layout_alignBottom="@+id/btnActividades"
        android:layout_toEndOf="@+id/btnActividades"
        android:textSize="60dp"
        android:layout_marginRight="30dp"
        android:textColor="#ffffff"
        android:layout_marginLeft="30dp" />

    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="AVANCE"
        android:id="@+id/btnAvance"
        android:background="@drawable/btngrupo4"
        android:layout_alignTop="@+id/btnNoticias"
        android:layout_toEndOf="@+id/btnNoticias"
        android:textSize="60dp"
        android:textColor="#ffffff"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:background="@drawable/menu"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:id="@+id/imageView6"
        android:background="@drawable/txtcodigos"
        android:layout_above="@+id/btnActividades"
        android:layout_alignEnd="@+id/btnActividades"
        android:layout_alignStart="@+id/btnActividades" />

    <ImageView
        android:layout_width="600dp"
        android:layout_height="300dp"
        android:id="@+id/imageLUDI"
        android:background="@drawable/ludi"
        android:layout_above="@+id/imageView6"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
