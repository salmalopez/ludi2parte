<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#9ce1e2"
    android:gravity="center_horizontal"
    android:paddingBottom="0dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/txtPregunta"
        android:id="@+id/txtPregunta"
        android:gravity="center"
        android:textColor="#106984"
        android:textSize="50dp"
        android:layout_marginTop="60dp"
        android:paddingBottom="40dp"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_weight=".10" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:paddingBottom="40dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:text="Opcion 1"
                android:textSize="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="20dp" />


            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="@string/btnRespuesta1"
                android:id="@+id/btnRespuesta1"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>



        <ImageView
            android:layout_width="500dp"
            android:layout_height="400dp"
            android:id="@+id/imagenJarra"
            android:layout_weight="0.37"
            android:layout_gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="74dp"
                android:text="Opcion 2"
                android:textSize="30dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:text="@string/btnRespuesta2"
                android:id="@+id/btnRespuesta2"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_weight="0.39"
                android:layout_gravity="center"
                android:layout_marginRight="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="20dp" />


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0.31">

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btn_regresar"
            android:visibility="visible"
            android:background="@drawable/regreso"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.00"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="900dp" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnCuestionario"
            android:background="@drawable/cuestionario"
            android:visibility="visible"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.00" />

        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/btnSiguiente"
            android:background="@drawable/reinicio"
            android:visibility="visible"
            android:layout_marginLeft="50dp" />
    </LinearLayout>



</LinearLayout>
